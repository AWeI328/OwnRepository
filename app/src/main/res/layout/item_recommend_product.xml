<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainStyleWhite"
        android:padding="@dimen/padding_5dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_recommend_product"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="测试数据"
            android:layout_below="@id/iv_recommend_product"
            android:layout_alignStart="@id/iv_recommend_product"
            android:layout_marginTop="@dimen/item_vertical_margin"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_a60000"
            android:layout_below="@id/tv_product_title"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="@dimen/item_vertical_margin"
            android:text="¥"
            android:textSize="@dimen/text_size_12sp"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="3000"
            android:layout_toEndOf="@id/text"
            android:layout_alignBottom="@id/text"
            android:textColor="@color/color_a60000"
            android:textSize="@dimen/text_size_16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_a60000"
            android:text=".00"
            android:layout_toEndOf="@id/tv_price"
            android:layout_alignBottom="@id/tv_price"
            android:textSize="@dimen/text_size_12sp"/>

        <TextView
            android:id="@+id/tv_similar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="看相似"
            android:textSize="@dimen/text_size_12sp"
            android:layout_alignTop="@id/tv_price"
            android:layout_alignParentEnd="true"
            android:background="@drawable/shape_text_background"
            android:padding="4dp"/>

    </RelativeLayout>
</layout>

